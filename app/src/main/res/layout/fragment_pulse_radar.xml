<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PulseRadar$PlaceholderFragment">

    
    <Button
        android:id="@+id/button_start_record"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="startRecord"
        android:text="@string/button_start_record"/>

    <Button
        android:layout_below="@id/button_start_record"
        android:id="@+id/button_stop_record"
        android:enabled="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="stopRecord"
        android:text="@string/button_stop_record"/>

    <Button
        android:layout_below="@id/button_stop_record"
        android:id="@+id/button_play_signal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="playSignal"
        android:text="@string/button_play_signal"/>

    <TextView
        android:id="@+id/info_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_play_signal"
        android:layout_marginTop="10dp"
        android:text="@string/info"/>

    <Button
        android:layout_below="@id/info_text"
        android:id="@+id/button_fft"
        android:text="Compute STFT of last record"
        android:enabled="false"
        android:onClick="testButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
